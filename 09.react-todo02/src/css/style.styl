/* style.style */
@import '_reset'

body
  font-family: 'Lucida Grande', 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', 'sans-serif';

input
  border 1px solid #ccc
  border-radius 3px
  padding 5px 8px
  font-size 0.8em

button
  border 1px solid #ccc
  border-radius 3px
  padding 5px 8px
  font-size 0.8em
  cursor pointer

.lyWrapper
  width 1200px
  margin 0 auto

  >header
    padding 20px

  >main
    padding 20px
    border-top 1px solid #ccc
    border-bottom 1px solid #ccc
    display: flex
  >footer
    text-align right
    padding 20px 0

  .todoWrapper
    width 50%
    >header
      margin-bottom 10px
    dl
      display table
      width 100%
      dt, dd
        display table-cell
    .todoInput
      margin-top 40px
      >p
        font-size 0.8em
        display inline
      >input
        margin-right 10px
  .doneWrapper
    width 50%
    >header
      margin-bottom 10px
    dl
      display table
      width 100%
      dt, dd
        display table-cell